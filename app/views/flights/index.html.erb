<h1>Flights Index Page</h1>

<% @flights.each do |flight| %>
  <div class="flight-<%= flight.number %>">
    <p><strong>Flight Number:</strong> <%= flight.number %> - <strong>Airline:</strong> <%= flight.airline.name %></p>
    <p>Passengers:</p>
    <ul>
      <% flight.passengers.each do |passenger| %>
        <li>
          <%= passenger.name %>
          <%= link_to 'Remove Passenger', remove_passenger_path(flight, passenger), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

